          <div class="container">
            <h1 class="text-center">ADMIN PAGE</h1>
            <h3 class="text-center head2">Upload your products here</h3>
              <%- include ("./partials/messages") %>
		      <div class="row">
			 <div class="col-lg-8 offset-lg-2">
        
                 <form method="POST"  action="/admin">
                <div class="form-group row">
                <label for="colFormLabelSm" class="col-lg-3 col-sm-10 col-form-label col-form-label-sm textr">Image Path:</label>
                <div class="col-lg-6 col-sm-10" id="inpDiv" >
                  <input type="text" class="form-control form-control-sm" id="colFormLabelSm" placeholder="imagePath" name="imagePath" value="<%= typeof imagePath !='undefined' ? imagePath:'' %>">
                </div>
              </div> <div class="form-group row">
                <label for="colFormLabelSm" class="col-lg-3 col-sm-10 col-form-label col-form-label-sm textr">Product ID:</label>
                <div class="col-lg-6 col-sm-10" id="inpDiv">
                  <input type="number" class="form-control form-control-sm" id="colFormLabelSm" placeholder="product_id" name="product_id" value="<%= typeof product_id !='undefined' ? product_id:'' %>">
                </div>
              </div> <div class="form-group row">
                <label for="colFormLabelSm" class="col-lg-3 col-sm-10 col-form-label col-form-label-sm textr">Title:</label>
                <div class="col-lg-6 col-sm-10" id="inpDiv">
                  <input type="text" class="form-control form-control-sm" id="colFormLabelSm" placeholder="title" name="title" value="<%= typeof title !='undefined' ? title:'' %>">
                </div>
              </div> <div class="form-group row">
                <label for="colFormLabelSm" class="col-lg-3 col-sm-10 col-form-label col-form-label-sm textr">Description:</label>
                <div class="col-lg-6 col-sm-10" id="inpDiv">
                  <input type="text" class="form-control form-control-sm" id="colFormLabelSm" placeholder="description" name="description" value="<%= typeof description !='undefined' ? description:'' %>">
                </div>
               
              </div><div class="form-group row">
                <label for="colFormLabelSm" class="col-lg-3 col-sm-10 col-form-label col-form-label-sm textr">Manufacturer:</label>
                <div class="col-lg-6 col-sm-10" id="inpDiv">
                  <input type="text" class="form-control form-control-sm"  id="colFormLabelSm" placeholder="manufacturer" name="manufacturer" value="<%= typeof manufacturer !='undefined' ? manufacturer:'' %>">
                </div>
              </div> <div class="form-group row">
                <label for="colFormLabelSm" class="col-lg-3 col-sm-10 col-form-label col-form-label-sm textr">Price:</label>
                <div class="col-lg-6 col-sm-10" id="inpDiv">
                  <input type="number" class="form-control form-control-sm" id="colFormLabelSm" placeholder="price" name="price" value="<%= typeof price !='undefined' ? price:'' %>">
                </div>
              </div> <div class="form-group row">
                <label for="colFormLabelSm" class="col-lg-3 col-sm-10 col-form-label col-form-label-sm textr">Category:</label>
                <div class="col-lg-6 col-sm-10" id="inpDiv">
                  <select type="text" class="form-control form-control-sm" id="colFormLabelSm" name="category" placeholder="category">
                    <option value="Fashion">Fashion</option>
                    <option value="Home">Home</option>
                    <option value="Beauty">Beauty</option>
                    <option value="sports">sports</option>
                    <option value="automobile">automobile</option>
                  </select>
                </div>
              </div>  
            <div class="col-md-12 form-group text-center">
            <input type="submit" class=" btn btn-primary logbtn" id="form_submit" value="Submit">
            </div>
                 </form>
