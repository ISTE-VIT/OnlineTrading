<section id="cards">   
<% products.forEach(function(product){ %>
<div class = "row">
    <% product.forEach(function(productt){ %>
   <div class = "col-sm-6 col-md-4">
      <div class = "thumbnail">
         <img src="<%= productt.imagePath %>" alt = "Generic placeholder thumbnail" style="width: 90%;">
      </div>
      
      <div class = "caption">
         <h3><%= productt.title %></h3>
         <p> <%= productt.description %> </p>
         
         <p>
            <a href = "/addToCart/<%= productt.id %>" class = "btn btn-primary" role = "button">
               Add to cart
            </a> 
            
           <span> $ <%= productt.price %> </span>
         </p>
      </div>
   </div>
   <% }) %>
</div>
    <% }) %>
        </section>
        
