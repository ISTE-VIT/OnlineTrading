    <body>
         <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">Shopping Site</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
      </li> 
    </ul>
    <li class="form-inline my-2 my-lg-0"><a class="nav-link" href="/shoppingCart">Shopping Cart
        <span class="badge">  </span>
        </a>
    </li>
     <li class="dropdown">                       
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-user" aria-hidden="true"></i> User <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <% if (loggedIn) { %>
                            <li>
                                <a href="profile">User Profile</a>
                            </li>
                            <li role="separator" class="divider"></li>
                            <li><a href="logout">Logout</a></li>
                        <%} else { %>
                            <li><a href="signup">SignUp</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="login">SignIn</a></li>
                        <% } %>
                    </ul>
                </li>
  </div>
</nav>
   <br>
        <br>
        <br>
        <br>


        
<% if (products) { %>
    <div class="row">
            <div class="col-md-12 col-sm-4 d-flex justify-content-center text-center">
                <ul class="list-group">
                    <% products.forEach(function(product){ %>
                    <li class="list-group-item">
                        <span class="badge"><%= product.qty%></span>
                        <strong><%= product.item.title%></strong>
                        <span class="label label-success"><%= product.price%></span>
                        <div class="btn-group">
                            <button class="btn btn-primary btn-xs deopdown-toggle" type="button" data-toggle="dropdown">Action<span class="caret"></span></button>
                            <ul class="dropdown-menu">
                                <li><a href="/reduce/<%= product.item._id%>">Reduce by one</a></li>
                                <li><a href="/remove/<%= product.item._id%>">Remove all</a></li>
                            </ul>
                        </div>
                    </li>
                   <% }) %> 
                </ul>
            </div>
        </div>
        
    <div class="row">
            <div class="col-md-12  d-flex justify-content-center text-center">
                <strong>Total: <%= totalPrice %></strong>
            </div>
    </div>
        
    <hr>
    <div class="row">
            <div class="col-md-12  d-flex justify-content-center text-center">
                <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
            </div>
    </div>
<% } else { %>
  <div class="row">
            <div class="col-md-12  d-flex justify-content-center text-center">
                <h2>NO items in the cart</h2>
            </div>
    </div>
<% } %>        
       
        
   
        
    
